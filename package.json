{
  "name": "elapi-study",
  "version": "0.5.0",
  "description": "ECHONET Lite Web API study tool",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KAIT-HEMS/ELWebAPIStudy.git"
  },
  "keywords": [],
  "author": "Hiroyuki Fujita",
  "license": "MIT",
  "files": [
    "html/*"
  ],
  "bugs": {
    "url": "https://github.com/KAIT-HEMS/ELWebAPIStudy/issues"
  },
  "homepage": "https://github.com/KAIT-HEMS/ELWebAPIStudy#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.3.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "ws": "^7.4.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "elapi_study"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
