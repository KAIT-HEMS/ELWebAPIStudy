{
  "name": "elapistudy",
  "version": "0.5.0",
  "description": "ECHONET Lite Web API study tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac --x64",
    "build-appx": "electron-builder -w appx",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.hirofujita.elapistudy",
    "productName": "elapistudy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "assets/mac/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/win/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "appx": {
      "identityName":"ECHONETCONSORTIUM.elapistudy",
      "applicationId":"ECHONETCONSORTIUM.elapistudy",
      "publisherDisplayName":"ECHONET CONSORTIUM",
      "publisher":"CN=5F03B850-25B1-47D3-8220-00E719EEF23A",
      "languages":["JA-JP"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KAIT-HEMS/ELWebAPIStudy.git"
  },
  "keywords": [],
  "author": "Hiroyuki Fujita",
  "license": "MIT",
  "files": [
    "html/*"
  ],
  "bugs": {
    "url": "https://github.com/KAIT-HEMS/ELWebAPIStudy/issues"
  },
  "homepage": "https://github.com/KAIT-HEMS/ELWebAPIStudy#readme",
  "devDependencies": {
    "electron": "11.3.0",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^7.4.3"
  }
}
